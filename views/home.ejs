    <body >
      <div class="col-8 offset-2 my-5">
        <div class="card">
          <div class="card-body">
            <h3>Chart Course</h3>
            <hr>
            <canvas id="myChart"></canvas>
          </div>
        </div>
      </div>
      <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
      <script>
        const ctx = document.getElementById('myChart');
      
        new Chart(ctx, {
          type: 'bar',
          data: {
            labels: ['JavaScript', 'PHP', 'Go', 'Swift', 'C++', 'Python'],
            datasets: [{
              label: 'Total Course',
              data: [2, 2, 1, 1, 1, 1],
              borderWidth: 1
            }]
          },
          options: {
            scales: {
              y: {
                beginAtZero: true
              }
            }
          }
        });
      </script>


